# Docker Compose environment variables
# This file is used by docker-compose to set variables in docker-compose.yml

# Data directory for Haven (local development)
APP_DATA_DIR=./data

# User and Group IDs (to avoid permission issues)
UID=1000
GID=1000

# Docker/Podman socket path
# For Docker: /var/run/docker.sock
# For Podman (rootless): /run/user/1000/podman/podman.sock or /run/podman/podman.sock
DOCKER_SOCK=/run/user/1000/podman/podman.sock

# Container runtime (docker or podman)
CONTAINER_RUNTIME=podman

# Optional: Override the config UI port
# APP_HAVEN_CONFIG_UI_PORT=8080
